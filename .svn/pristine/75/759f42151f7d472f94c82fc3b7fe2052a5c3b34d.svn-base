{% extends 'base.html' %}

{% block metas %}
    {{ super() }}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
{% endblock %}

{% block title %}仓库管理{% endblock %}

{% block subnav %}{% endblock %}

{% block content %}
    <div class="container">
       <h4 class="page-header"><a href="{{url_for('.index')}}">返回仓库列表</a> »<span>添加仓库</span></h4>
        <form class="form-horizontal" method="post">
            {{ form.csrf_token }}
			<div class="form-group">
                {{ form.depotname.label(class="col-sm-2 control-label") }}
				 <div class="col-sm-10">
                {% if form.depotname.errors %}
                    {{ form.depotname(class='form-control is-invalid') }}
                    {% for error in form.depotname.errors %}
                        <div class="invalid-feedback">
                            {{ error }}
                        </div>
                    {% endfor %}
                {% else %}
                    {{ form.depotname(class='form-control') }}
                {% endif %}
				</div>
            </div>
            <div class="form-group">
                {{ form.template.label(class="col-sm-2 control-label") }}
				 <div class="col-sm-10">
                {{ form.template(class='form-control') }}
				</div>
			</div>
			 <div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					{{ form.submit(class='btn btn-primary') }}
				</div>
			</div>
        </form>
    </div>
{% endblock %}
		