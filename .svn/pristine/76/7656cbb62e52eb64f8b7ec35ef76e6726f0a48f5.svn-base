{% extends 'base.html' %}

{% block metas %}
    {{ super() }}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
{% endblock %}

{% block title %}图书管理{% endblock %}

{% block scripts %}
<script type="text/javascript" src="{{url_for('static',filename='js/book.js')}}"></script>

{% endblock %}

{% block subnav %}{% endblock %}

{% block content %}
    <div class="container">
       <h4 class="page-header"><a href="{{url_for('.index')}}">返回列表</a> »<span>添加图书</span></h4>
        <form class="form-horizontal" method="post" onsubmit= "return checkBook()">
            {{ form.csrf_token }}
			<div class="form-group">
                {{ form.booknumber.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                    {{ form.booknumber(class='form-control') }}
					<span id="sbooknumber"></span>
				</div>
            </div>
            <div class="form-group">
                {{ form.bookname.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.bookname(class='form-control') }}
				<span id="sbookname"></span>
				</div>
			</div>
			<div class="form-group">
                {{ form.numbers.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.numbers(class='form-control') }}
				<span id="snumbers"></span>
				</div>
			</div>
			<div class="form-group">
                {{ form.prices.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.prices(class='form-control') }}
				<span id="sprices"></span>
				</div>
			</div>
			<div class="form-group">
                {{ form.position.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.position(class='form-control') }}
				<span id="sposition"></span>
				</div>
			</div>
			<div class="form-group">
                {{ form.username.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.username(class='form-control') }}
				<span id="susername"></span>
				</div>
			</div>
			<div class="form-group">
                {{ form.lendtime.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.lendtime(class='form-control') }}
				<span id="slendtime"></span>
				</div>
			</div>
			<div class="form-group">
                {{ form.backtime.label(class="col-sm-1 control-label") }}
				 <div class="col-sm-4">
                {{ form.backtime(class='form-control') }}
				<span id="sbacktime"></span>
				</div>
			</div>
			 <div class="form-group">
				<div class="col-sm-offset-1 col-sm-4">
					{{ form.submit(class='btn btn-primary') }}
				</div>
			</div>
        </form>
    </div>
{% endblock %}
		