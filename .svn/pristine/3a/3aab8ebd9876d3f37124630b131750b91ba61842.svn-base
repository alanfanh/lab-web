{% extends 'base.html' %}

{% block scripts %}
<script type="text/javascript" src="{{url_for('static',filename='js/auth.js')}}"></script>
{% endblock %}

{% block subnav %}{% endblock %}

{% block title %}找回密码{% endblock %}

{% block content %}
	<div class="container">
		 <h4 class="page-header">找回密码</h4>
		<div class="row">
			<div class="col-sm-8">
				<form action="" method="post" class="form-horizontal" role="form" onsubmit="return checkForget()">
					{{ form.csrf_token }}
					<div class="form-group  required">
						{{ form.email.label(class="col-sm-2 control-label") }}
						 <div class="col-sm-10">
						{{ form.email(class='form-control') }}
						<span id="semail"></span>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							{{ form.submit(class='btn btn-primary') }}
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
