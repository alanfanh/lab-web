# -*- coding: utf-8 -*-

from flask_wtf import FlaskForm
from wtforms import StringField, SelectField,SubmitField,DateTimeField,IntegerField,FloatField,DateField
from wtforms.validators import DataRequired, Optional, Length,NumberRange
from flask_wtf.file import FileField,FileRequired,FileAllowed


#图书馆
class BookForm(FlaskForm):
    booknumber = StringField('图书编号',validators = [DataRequired(),Length(1,255)])
    bookname = StringField('书名',validators = [DataRequired(),Length(1,255)])
    numbers = IntegerField('数量',validators = [DataRequired(),NumberRange(1,65535)])
    prices = FloatField('价格',validators = [DataRequired()])
    position = StringField('储位',validators = [DataRequired(),Length(1,255)])
    username = StringField('借用人',validators = [DataRequired(),Length(1,255)])
    lendtime = DateField('借用时间',validators = [DataRequired()])
    backtime = DateField('归还时间',validators = [DataRequired()])
    submit = SubmitField(u'保存')