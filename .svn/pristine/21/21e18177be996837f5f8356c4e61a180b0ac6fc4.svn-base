{% extends 'base.html' %}
{% from 'bootstrap/pagination.html' import render_pagination %}
		
{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3 col-md-2 sidebar">
				<ul class="nav nav-sidebar">
					{% for depot in depots %}
					<li class="active">
						<a href="{{url_for('main.show',name=depot.name)}}">{{depot.name}}</a>
					</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
				<h2 class="page-header">{{depot.name}}</h2>
				<div class="row">
				{% if current_user.is_administrator() %}
					<div class="col-xs-1">
						<a class="btn btn-info btn-sm" href="{{url_for('main.add',name=depot.name)}}">添加</a>
					</div>
					<div class="col-xs-1">
						<form class="form-inline" method="post" action="" onsubmit="return delAll()">
							<input type="hidden" name="csrf_token" value="{{csrf_token}}">
							<input type="submit" class="btn btn-info btn-sm" value="删除">
						</form>
					</div>
				{% endif %}
					<div class="col-xs-5 pull-right">
						<form class="form-inline"  action="{{url_for('main.show',name = depot.name)}}">
							<div class="form-group form-inline">
								<div class="col-sm-6">
									<input type="text" name="q" class="form-control mr-sm-1" placeholder="资产编号,品牌,型号,借机人">
								</div>
								 <div class="col-xs-3">
									<button class="btn my-2 my-sm-0" type="submit"><span class="oi oi-magnifying-glass">搜索</span></button>
								</div>
								<div class="col-sm-2"><a href="{{url_for('main.show',name=depot.name)}}" class="btn btn-info my-2 my-sm-0">刷新</a> </div>
							</div>
						</form>
					</div>
				</div>	
				<br>
				<div class="table-responsive">
					<table  class="table table-striped">
						<thead>
							<tr>
									<th><input type="checkbox" id="all" onclick="checkAll(this)"></th>
									{% if template_id == 1 %}
									<th>ID</th>
									<th>资产编号</th>
									<th>品牌</th>
									<th>规格型号</th>
									<th>现存数量</th>
									<th>储位</th>
									<th>状态</th>
									<th>借机人</th>
									{% elif template_id == 2 %}
									<th>ID</th>
									<th>资产编号</th>
									<th>品牌</th>
									<th>规格型号</th>
									<th>数量(套/个)</th>
									<th>责任组/人</th>
									<th>储位</th>
									<th>状态</th>
									<th>借机人</th>
									{% else %}
									<th>ID</th>
									<th>资产编号</th>
									<th>品牌</th>
									<th>规格型号</th>
									<th>数量(套/个)</th>
									<th>部门</th>
									<th>组别</th>
									<th>储位</th>
									<th>状态</th>
									<th>借机人</th>
									{% endif %}
									{% if current_user.is_administrator() %}
									<th>操作</th>
									{% endif %}
							</tr>
						</thead>
						<tbody>
						{% if cmps %}
						{% for cmp in cmps %}
							<tr>
								<td>
								<input type="checkbox" name="box" onclick="selectAll()" value="{{cmp.id}}">
								</td>
								<td>{{ loop.index + ((pagination.page-1) * config.MAIN_PER_PAGE) }}</td>
								{% if template_id == 1 %}
								<td>{{ cmp.assetnumber }}</td>
								<td>{{ cmp.product_name }}</td>
								<td>{{ cmp.model_name }}</td>
								<td>{{ cmp.numbers }}</td>
								<td>{{ cmp.position }}</td>
								<td>{{ cmp.status }}</td>
								<td>{{ cmp.username }}</td>
								{% elif template_id ==2 %}
								<td>{{ cmp.assetnumber }}</td>
								<td>{{ cmp.product_name }}</td>
								<td>{{ cmp.model_name }}</td>
								<td>{{ cmp.numbers }}</td>
								<td>{{ cmp.owner }}</td>
								<td>{{ cmp.position }}</td>
								<td>{{ cmp.status }}</td>
								<td>{{ cmp.username }}</td>
								{% else %}
								<td>{{ cmp.assetnumber }}</td>
								<td>{{ cmp.product_name }}</td>
								<td>{{ cmp.model_name }}</td>
								<td>{{ cmp.numbers }}</td>
								<th>{{ cmp.department}}</th>
								<td>{{ cmp.owner }}</td>
								<td>{{ cmp.position }}</td>
								<td>{{ cmp.status }}</td>
								<td>{{ cmp.username }}</td>
								{% endif %}
								{% if current_user.is_administrator() %}
								<td>
									<div class="row">
										<div class="col-sm-3">
											<a class="btn btn-info btn-sm" href="{{url_for('main.edit',name=depot.name,id=cmp.id)}}">编辑</a>
										</div>
										<div class="col-sm-3">
											<form class="form-inline" method="post" action="{{url_for('main.delete',name=depot.name,id=cmp.id)}}">
												<input type="hidden" name="csrf_token" value="{{csrf_token}}">
												<button type="submit" class="btn btn-danger btn-sm" id="delete" onclick="return delItem()">删除</button>
											</form>
										</div>
									</div>
								</td>
								{% endif %}
							</tr>
							{% endfor %}
							{% else %} 
							<tr><td colspan="10" class="text-center">暂无数据</td></tr>
						{% endif %}
						</tbody>
					</table>
				</div>
				<div class="page-footer">
						{% if pagination.pages > 1 %} {{render_pagination(pagination)}} {% endif %}
				</div>
				<div class="form-group">
					<div class="pull-left col-xs-4 col-sm-2">
						<a class="btn btn-default btn-sm export-rule" href="{{url_for('main.explore',name=depot.name)}}">导出数据</a>
					</div>
					{% if current_user.is_administrator() %}
					<div class="input-group col-xs-7 col-sm-5">
						<form method="post" enctype="multipart/form-data" action="{{url_for('main.upload',name=depot.name)}}" role="form">
							{{ form.csrf_token }}
							<div class="col-sm-6">
							{{ form.file }}
							</div>
							<div class="col-sm-4">
								{{ form.upload}}
							</div>
						</form>
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
